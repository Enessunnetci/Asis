<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/edinburgh"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btnBalance"
        android:layout_width="176dp"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:text="@string/balance_query"
        android:alpha="0.9"
        app:layout_constraintEnd_toStartOf="@+id/btnBuses"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBuses"
        android:layout_width="176dp"
        android:layout_height="72dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:alpha="0.9"
        android:text="@string/buses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFavorite"
        android:layout_width="176dp"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="22dp"
        android:background="@color/white"
        android:alpha="0.9"
        android:text="@string/favorite"
        app:layout_constraintEnd_toStartOf="@+id/btnStop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBalance" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="176dp"
        android:layout_height="72dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="18dp"
        android:alpha="0.9"
        android:background="@color/white"
        android:text="@string/stops"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBuses" />

</androidx.constraintlayout.widget.ConstraintLayout>